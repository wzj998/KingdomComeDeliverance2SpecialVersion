<?xml version="1.0" encoding="utf-8"?>
<Database xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" Name="brambora">
  <Skald>
    <Dialog Name="hanus_s_bohutou_si_povidaji">
      <Text Text="Hanuš s Bohutou si povídají" />
      <Dialogue Type="ingame" Initiator="NonPlayer" TechnicalStatus="Enabled">
        <Decision Name="dec1" Alias="mainQuest_hanusSBohutouSiPovidaji">
          <Sequences>
            <Sequence EndType="EndDialogue" Name="seq1">
              <Elements>
                <Response Role="BOHUTA_NPC">
                  <Text Text="Povídám ti že to byla rána osudu." />
                  <Commands>
                    <CameraCommand />
                  </Commands>
                </Response>
                <Response Role="HANUS_Z_LIPE">
                  <Text Text="Já si spíš myslím že se ti něco zdálo o sudu." />
                  <Commands>
                    <CameraCommand />
                  </Commands>
                </Response>
                <Response Role="BOHUTA_NPC">
                  <Text Text="Sám jsi jak sud." />
                  <Commands>
                    <CameraCommand />
                  </Commands>
                </Response>
                <Response Role="BOHUTA_NPC">
                  <Text Text="Jdu ráno z lázní tamhle pod hradbama." />
                </Response>
                <Response Role="BOHUTA_NPC">
                  <Text Text="V rukách pár měchů vína, co zbyly po... " />
                </Response>
                <Response Role="BOHUTA_NPC">
                  <Text Text="...ranní hygieně v lázních." />
                </Response>
                <Response Role="BOHUTA_NPC">
                  <Text Text="A povídám:" />
                </Response>
                <Response Role="BOHUTA_NPC">
                  <Text Text="&quot;To slunko ale pálí, to mi byl čert dlužen&quot;" />
                </Response>
                <Response Role="BOHUTA_NPC">
                  <Text Text="&quot;Kdybys tak pane Bože alespoň něco málo nechal spadnout z toho mráčku nade mnou&quot;" />
                </Response>
                <Response Role="BOHUTA_NPC">
                  <Text Text="A v tu ránu spadl ten meč z nebe a propíchl jeden měch skrz naskrz." />
                </Response>
                <Response Role="BOHUTA_NPC">
                  <Text Text="Povídám ti zesral jsem se až na patách." />
                </Response>
                <Response Role="HANUS_Z_LIPE">
                  <Text Text="Tak zrovna tohle ti věřím." />
                  <Commands>
                    <CameraCommand />
                  </Commands>
                </Response>
                <Response Role="HANUS_Z_LIPE">
                  <Text Text="Jestli si spíš ty nebyl plnej vína jak ten měch." />
                </Response>
                <Response Role="HANUS_Z_LIPE">
                  <Text Text="V opilosti jsi někomu sebral meč,  měch sis proděravěl sám a nakonec ses znečistil než jsi sám upadl do opileckýho spánku." />
                </Response>
                <Response Role="BOHUTA_NPC">
                  <Text Text="No každopádně už nikdy nebudu pít." />
                  <Commands>
                    <CameraCommand />
                  </Commands>
                </Response>
                <Response Role="HANUS_Z_LIPE">
                  <Text Text="Tak to chci vidět." />
                  <Commands>
                    <CameraCommand />
                  </Commands>
                </Response>
              </Elements>
            </Sequence>
          </Sequences>
        </Decision>
      </Dialogue>
    </Dialog>
  </Skald>
