          <Asset Name="Soul" Alias="player" />
          <Edge From="isactive" To="IsActive" />
        </WeaponDrawTrigger>
      </Nodes>
      <Text Text="FightFoulNotificationsAdvanced" />
    </Module>
  </Skald>
