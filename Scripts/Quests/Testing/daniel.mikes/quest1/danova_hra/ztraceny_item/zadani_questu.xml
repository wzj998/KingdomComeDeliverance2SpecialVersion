                                    </Lines>
                                  </SequenceElementWithRole>
                                </Elements>
                                <Triggers>
                                  <Port Name="hrac_chce_expy" />
                                </Triggers>
                              </Sequence>
                              <Sequence Name="seq31" GoToDecision="dec11" EndType="GoTo">
                                <UiPrompt Text="zlato" />
                                <Elements>
                                  <SequenceElementWithRole Role="HENRY">
                                    <Lines>
                                      <Response>
                                        <Text Text="Peníze." />
                                      </Response>
                                    </Lines>
                                  </SequenceElementWithRole>
                                </Elements>
                                <Triggers />
                              </Sequence>
                            </Sequences>
