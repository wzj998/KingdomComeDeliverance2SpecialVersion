											<Parenthetical>
												<Text StringName="kube_henry_usklibne_se_CfCe" Text="ušklíbne se" />
											</Parenthetical>
											<Text StringName="kube_henry_potrebujes_sna_4Gfk" Text="Zdá se, že potřebuješ pomoc." />
										</Response>
