									<Elements>
										<Response Role="HENRY">
											<Parenthetical>
												<Text StringName="cin__henry_parafrazuje_zi_oTa2" Text="parafrázuje Žižku" />
											</Parenthetical>
											<Text StringName="cin__henry_do_dila_2ppj" Text="Tak kurva do díla!" />
										</Response>
									</Elements>
