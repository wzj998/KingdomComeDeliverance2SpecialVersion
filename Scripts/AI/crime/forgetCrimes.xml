											<DestroyInformationFromHolder Information="$information" />
										</SuppressFailure>
									</IfCondition>
								</ForEach>
								<RemoveLink From="$this.id" To="$this.id" Tag="&apos;crime_forgetCrimes&apos;" LinkOpHandleMode="OverWrite" />
							</Sequence>
						</AtomicDecorator>
					</LinkGate>
				</Sequence>
			</Behavior>
		</Root>
